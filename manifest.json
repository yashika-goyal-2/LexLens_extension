{
  "manifest_version": 3,
  "name": "LexiLens: T&C User Assistant",
  "version": "1.0",
  "description": "Helps you understand Terms & Conditions instantly using AI.",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["https://generativelanguage.googleapis.com/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["gemini_client.js", "content.js"]
    }
  ]
}
